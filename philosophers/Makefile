#------------------------------------------------------------------------------#
#								I N S T  V A R				   			       #
#------------------------------------------------------------------------------#

CC			= 	gcc
CFLAGS		= 	-Wall -Wextra -Werror
#CDEBUG		= 	-fsanitize=address -g
RM			= 	rm -f

#------------------------------------------------------------------------------#
#									F I L E							   #
#------------------------------------------------------------------------------#

NAME		=	philo
HEADER		=	./includes/
FOLDER		=	./srcs/
D_FT		=	./ft_functions/
D_TERM		=	./term/
SRC_LIST	=	main.c						\
				$(D_TERM)term.c				\
				$(D_FT)ft_strlen.c			\
				$(D_FT)ft_putchar_fd.c		\
				$(D_FT)ft_putstr.c			\
				$(D_FT)ft_putendl_fd.c
SRC			=	$(addprefix $(FOLDER), $(SRC_LIST))
OBJ			=	$(SRC:.c=.o)

#------------------------------------------------------------------------------#
#								T	A	R	G	E	T			   #
#------------------------------------------------------------------------------#

%.o			:	%.c
				@$(CC) $(CFLAGS) $(CDEBUG) -I $(HEADER) -o $@ -c $<

$(NAME)		:	$(OBJ)
				@$(CC) $(CFLAGS) $(CDEBUG) -I $(HEADER) -o $(NAME) $(OBJ)

#------------------------------------------------------------------------------#
#								R	U	L	E					       #
#------------------------------------------------------------------------------#

.PHONY		: 	all
all			: 	$(NAME)

.PHONY		:	clean
clean		:
				@$(RM) $(OBJ)

.PHONY		:	fclean
fclean		: 	clean
				@$(RM) $(NAME)

.PHONY		:	re
re			:	fclean all
