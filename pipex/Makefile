#------------------------------------------------------------------------------#
#				I N S T  V A R				       #
#------------------------------------------------------------------------------#

CC			= 	gcc
CFLAGS		= 	-Wall -Wextra -Werror
CDEBUG		= 	-fsanitize=address -g
RM			= 	rm -f
HEADER		=	./includes/
FOLDER		=	./srcs/
SRC_LIST	=	main.c
SRC			=	$(addprefix $(FOLDER), $(SRC_LIST))
OBJ			=	$(SRC:.c=.o)

#------------------------------------------------------------------------------#
#			       	F I L E					       #
#------------------------------------------------------------------------------#

NAME		=	pipex

#------------------------------------------------------------------------------#
#				T A R G E T				       #
#------------------------------------------------------------------------------#

%.o			:	%.c
				@$(CC) $(CFLAGS) $(CDEBUG) -I $(HEADER) -o $@ -c $<

$(NAME)		:	$(OBJ)
				@$(CC) $(CFLAGS) $(CDEBUG) -I $(HEADER) -o $(NAME) $(OBJ)

#------------------------------------------------------------------------------#
#				R U L E					       #
#------------------------------------------------------------------------------#

.PHONY		: 	all
all			: 	$(NAME)

.PHONY		:	clean
clean		:
				@$(RM) $(OBJ)

.PHONY		:	fclean
fclean		: 	clean
				@$(RM) $(NAME)

.PHONY		:	re
re			:	fclean all
