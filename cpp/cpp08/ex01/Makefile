#------------------------------------------------------------------------------#
#								I N S T  V A R	   			       #
#------------------------------------------------------------------------------#

CXX			= 	c++
CXXFLAGS		= 	-Wall -Wextra -Werror -std=c++98
RM			= 	rm -f

#------------------------------------------------------------------------------#
#									F I L E   #
#------------------------------------------------------------------------------#

NAME		=	ex01	
FOLDER		=	./srcs/
HEADER		=	./includes/
SRC_LIST	=	main.cpp	\
				Span.cpp
SRC			=	$(addprefix $(FOLDER), $(SRC_LIST))
OBJ			=	$(SRC:.cpp=.o)

#------------------------------------------------------------------------------#
#								T	A	RG	E	T			   #
#------------------------------------------------------------------------------#

%.o			:	%.cpp
				@$(CXX) $(CXXFLAGS) $(CDEBUG) -I $(HEADER) -o $@ -c $<

$(NAME)		:	$(OBJ)
				@$(CXX) $(CXXFLAGS) $(CDEBUG) -I $(HEADER) -o $(NAME) $(OBJ)

#------------------------------------------------------------------------------#
#								R	U	LE					       #
#------------------------------------------------------------------------------#

.PHONY		: 	all
all			: 	$(NAME)

.PHONY		:	clean
clean		:
				@$(RM) $(OBJ)

.PHONY		:	fclean
fclean		: 	clean
				@$(RM) $(NAME)

.PHONY		:	re
re			:	fclean all
