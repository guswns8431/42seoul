#------------------------------------------------------------------------------#
#								I N S T  V A R	   			       #
#------------------------------------------------------------------------------#

CXX			= 	c++
CXXFLAGS	= 	-Wall -Wextra -Werror -std=c++98
RM			= 	rm -f

#------------------------------------------------------------------------------#
#									F I L E   #
#------------------------------------------------------------------------------#

NAME		=	ft_container
FOLDER		=	./srcs/
HEADER		=	./includes/
SRC_LIST	=	main.cpp
SRC			=	$(addprefix $(FOLDER), $(SRC_LIST))
OBJ			=	$(SRC:.cpp=.o)

#------------------------------------------------------------------------------#
#								T	A	RG	E	T			   #
#------------------------------------------------------------------------------#

%.o			:	%.cpp
				@$(CXX) $(CXXFLAGS) -I $(HEADER) $(CDEBUG) -o $@ -c $<

$(NAME)		:	$(OBJ)
				@$(CXX) $(CXXFLAGS) -I $(HEADER) $(CDEBUG) -o $(NAME) $(OBJ)

#------------------------------------------------------------------------------#
#								R	U	LE					       #
#------------------------------------------------------------------------------#

.PHONY		: 	all
all			: 	$(NAME)

.PHONY		:	clean
clean		:
				@$(RM) $(OBJ)

.PHONY		:	fclean
fclean		: 	clean
				@$(RM) $(NAME)

.PHONY		:	re
re			:	fclean all

.PHONY      :	test
test        :
				@make -C ./tests/benchmark1
				@make -C ./tests/benchmark2 bench
				@make -C ./tests/diff_test
				@make -C ./tests/unit_test
